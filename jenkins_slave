pipeline {
    agent any
    parameters {
        string(name: 'NAME', defaultValue: 'Yotsanan', description: 'Enter your name')
        string(name: 'Ages', defaultValue: '21', description: 'Enter your age')
    }
    stages {
        stage('Example') {
            steps {
                echo "Hello from Slave ${params.NAME} of ${params.AGE}"
                sh "python myscript ${params.NAME} --age ${params.AGE"
                echo "Success"
            }
        }
    }
}